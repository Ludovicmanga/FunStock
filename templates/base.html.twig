<!DOCTYPE html>
<html>
    <head>
        {% block head %}{% endblock %}
        <meta charset="UTF-8">
        <meta name="viewport" content="width=800" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">        
    </head>
    <body>
        {% include 'navbar.html.twig' %}
        <div class="body_wrapper">
            {% block body %}{% endblock %}
        </div>
    </body>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>
    <script>
        var acceptBattleRequestUrl = "{{ path('battle_accept_request', {'battle': 'battle_id'}) }}";
        var declineBattleRequestUrl = "{{ path('battle_decline_request', {'battle': 'battle_id'}) }}";
        var loggedUserNumberOfWinnedBattles = "{{ app.user.numberOfWinnedBattles }}";
        var loggedUserNumberOfLostBattles = "{{ app.user.numberOfLostBattles }}";
    </script>
    <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>
</html>
