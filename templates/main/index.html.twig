{% extends 'base.html.twig' %}

{% block title %}FunStock !{% endblock %}

{% block body %}

    {# We get (without displaying) all the battle details to show them inside the modal #}
    
    {% for battle in all_battles %}
        <div style="display:none;">
            <div id="{{ battle.id }}_battle_preview_amount">
                {{ battle.amount }}
            </div>
            <div id="{{ battle.id }}_battle_preview_stock">
                {{ battle.stock }}
            </div>
            <div id="{{ battle.id }}_battle_preview_variation_direction_prediction">
                {{ battle.stockVariationDirectionPrediction }}
            </div>
        </div>
    {% endfor %}

    <div class="main_boxes_row">
        <div class="main_box">
            <h1 class="main_box_title">Your results (last 30 days)</h1>
        </div>
        <div class="main_box">
            <h1 class="main_box_title">Challenge your friends</h1>
            {% for user in all_users_but_logged_one %}
            <div id="challenge_friends_box_wrapper">
                <div class="profile_box_container">
                    <div class="profile_picture_container">
                        <img src="{{ asset('uploads/profile_man.jpg') }}">
                    </div>
                    <h3>{{ user.firstName }}</h3>
                </div>
                <div class="stock_valuation_box_container">
                    <h3>Stock Valuation</h3>
                    <div>
                        <div>+ 7%</div>
                        <i class="fa-solid fa-rocket"></i>
                    </div>
                </div>
                <div class="last_fights_box">
                    <div>{{ user.numberOfWinnedBattles }} wins</div>
                    <i class="fa-solid fa-trophy"></i>
                    <div>{{ user.numberOfLostBattles }} losses</div>
                    <i class="fa-solid fa-skull-crossbones"></i>
                </div>
                <a class="fight_btn" href="#fight_modal" id="{{ user.id }}_fight_btn">
                    <div class="not-clickable">Fight {{ user.firstName }}</div>
                    <i class="fa-solid fa-bomb not-clickable"></i>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="main_boxes_row">
        <div class="main_box">
            <h1 class="main_box_title">My battle requests</h1>
            {% if pending_inbound_battle_requests %}
                {% for pending_inbound_battle_request in pending_inbound_battle_requests %}
                    <div class="battle_request_box_wrapper" id="{{ pending_inbound_battle_request.id }}_battle_request_box_wrapper">
                        <div class="profile_box_container">
                            <div class="profile_picture_container">
                                <img src="{{ asset('uploads/profile_man.jpg') }}">
                            </div>
                            <h3>{{ pending_inbound_battle_request.attacker.firstName }}</h3>
                        </div>
                        <a href="#view_battle_request_modal" class="view_battle_request_btn" id="{{ pending_inbound_battle_request.id }}_view_battle_request_btn">
                            <div class="not-clickable">View the challenge</div>
                        </a>
                        <a href="#" class="accept_battle_request_btn" id="{{ pending_inbound_battle_request.id }}_accept_battle_request_btn">
                            <span class="not-clickable">Accept</span>
                            <i class="fa-solid fa-check not-clickable"></i>
                        </a>
                        <a href="#" class="decline_battle_request_btn" id="{{ pending_inbound_battle_request.id }}_decline_battle_request_btn">
                            <span class="not-clickable">Decline</span>
                            <i class="fa-solid fa-check not-clickable"></i>
                        </a>
                    </div>
                {% endfor %}
            {% endif %}
            {% if pending_outbound_battle_requests %}
                {% for pending_outbound_battle_request in pending_outbound_battle_requests %}
                    <div class="battle_request_box_wrapper" id="{{ pending_outbound_battle_request.id }}_battle_request_box_wrapper">
                        <div class="profile_box_container">
                            <div class="profile_picture_container">
                                <img src="{{ asset('uploads/profile_man.jpg') }}">
                            </div>
                            <h3>{{ pending_outbound_battle_request.defender.firstName }}</h3>
                        </div>
                        <a href="#view_battle_request_modal" class="view_battle_request_btn" id="{{ pending_outbound_battle_request.id }}_view_battle_request_btn">
                            <div class="not-clickable">View the challenge</div>
                        </a>
                        <div class="pending_inbound_battle_request_disclaimer_container">
                            <span>Pending...</span>
                            <i class="fa-regular fa-clock"></i>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        <div class="main_box">
            <h1 class="main_box_title">Buy stocks</h1>
            <div id="buy_sell_stock_box_wrapper">
                {{ form_start(buy_or_sell_stocks_form, {'attr' : {'id' : 'buy_or_sell_stocks_form'}}) }}
                    <input type="number" name="stock_amount">
                    {{ form_row(buy_or_sell_stocks_form.stock) }}
                    <button id="buy_sell_stock_submit_btn">Buy stocks</button>
                {{ form_end(buy_or_sell_stocks_form) }}
            </div>
        </div>
    </div>
    {% include 'modals/fightModal.html.twig' %}
    {% include 'modals/viewBattleRequestsModal.html.twig' %}
{% endblock %}
